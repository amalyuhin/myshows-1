<?xml version="1.0" encoding="utf-8"?>
<resources>


     <style name="Theme.MyShows" parent="Theme.Sherlock.ForceOverflow">
         <item name="actionBarStyle">@style/MyShows.ActionBar</item>
         <item name="android:actionBarStyle">@style/MyShows.ActionBar</item>
         <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
         <!--<item name="android:listViewStyle">@style/MyShows.ListView</item>-->

     </style>


    <style name="MyShows.ListView" parent="android:Widget.ListView">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:cacheColorHint">@color/dark_gray</item>

    </style>

    <style name="MyShows.ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">@color/dark_red</item>
        <item name="background">@color/dark_red</item>
    </style>



    <style name="CustomTitlePageIndicator">
        <item name="android:background">#18FF0000</item>
        <item name="footerColor">#FFAA2222</item>
        <item name="footerLineHeight">1dp</item>
        <item name="footerIndicatorHeight">3dp</item>
        <item name="footerIndicatorStyle">underline</item>
        <item name="android:textColor">@color/white</item>
        <item name="selectedColor">@color/white</item>
        <item name="selectedBold">true</item>
    </style>


    <!--Common styles-->

    <style name="windowContentOverlay">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="windowNoTitle">
        <item name="android:windowNoTitle">true</item>
    </style>


    <!--Lite theme styles-->

    <style name="LightWindowBackground">
        <item name="android:windowBackground">@color/app_background</item>
    </style>



    <style name="LightRatingBar" >
        <item name="android:progressDrawable">@drawable/red_rating_bar</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:maxHeight">18dip</item>
    </style>

     <style name="bigLightRatingBar" >
        <item name="android:progressDrawable">@drawable/yellow_big_rating_bar</item>
        <item name="android:minHeight">38dip</item>
        <item name="android:maxHeight">38dip</item>
    </style>


    <!--Show tab-->

    <style name="LightStatusButtonsTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightLabelsTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LightLabelsValuesTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LightLabelsValuesTextAppearanceBold" parent="@android:style/TextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/light_red</item>
        <item name="android:textStyle">normal</item>
    </style>



    <!--News tab-->

    <style name="LightUserNameTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightShowTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="LightStatusButtonActive" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:background">@color/light_red</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/LightStatusButtonsTextAppearance</item>
    </style>

    <style name="LightStatusButtonInactive" parent="@style/LightStatusButtonActive">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>

    </style>

    <style name="LightCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@android:drawable/checkbox_on_background</item>
        <item name="android:button">@android:drawable/checkbox_off_background</item>

    </style>

    <style name="LightCheck" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkboxes</item>
    </style>


    <style name="LiteDivider">
        <item name="android:background">@drawable/divider</item>
    </style>

    
    <style name="LiteHeaderBackground">
        <item name="android:background">@drawable/light_header</item>
    </style>
    

    <!--Dark theme styles-->

    <style name="DarkWindowBackground">
        <item name="android:windowBackground">@color/light_gray</item>
    </style>



    <style name="DarkRatingBar" >
        <item name="android:progressDrawable">@drawable/yellow_rating_bar</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        
    </style>

    <style name="bigDarkRatingBar" >
        <item name="android:progressDrawable">@drawable/yellow_big_rating_bar</item>
        <item name="android:minHeight">38dip</item>
        <item name="android:maxHeight">38dip</item>
    </style>


    <!--Show styles-->

    <style name="DarkStatusButtonsTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
         <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkLabelsTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="DarkLabelsValuesTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DarkLabelsValuesTextAppearanceBold" parent="DarkLabelsValuesTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkTitleTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>




    <!--News tab-->


    <style name="DarkUserNameTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/very_light_blue_2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkShowTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DarkStatusButtonActive" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:background">@drawable/progress_bar_red</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/DarkStatusButtonsTextAppearance</item>
    </style>

    <style name="DarkStatusButtonInactive" parent="@style/DarkStatusButtonActive">
        <item name="android:background">@null</item>

    </style>

    <style name="DarkCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@android:drawable/checkbox_on_background</item>
        <item name="android:button">@android:drawable/checkbox_off_background</item>

    </style>

    <style name="DarkCheck" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/dark_checkboxes</item>
    </style>

    <style name="DarkHeaderBackground">
        <item name="android:background">@drawable/dark_header</item>
    </style>

    


</resources>
