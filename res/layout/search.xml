<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingTop="20dip"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@drawable/gradient_background"
        >


    <ImageView
            android:id="@+id/my_shows_logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/my_shows_logo_dark"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dip"

            />


    <LinearLayout android:id="@+id/search"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:paddingTop="30dp"
                  android:layout_below="@id/my_shows_logo"
            >


        <EditText
                android:id="@+id/search_box"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="@string/search"
                android:singleLine="true"
                />

        <Button android:id="@+id/search_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/search_button"
                android:background="@drawable/red_button"
                android:textColor="@color/white"
                />


    </LinearLayout>


    <LinearLayout
            android:id="@+id/search_labels"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/search"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            >



            <Button
                    android:id="@+id/favourites_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_rating"
                    android:text="@string/favourites_text"
                    android:textColor="@color/white"
                    android:background="@null"
                    android:padding="20dp"
                    />



            <Button
                    android:id="@+id/catalog_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_catalog"
                    android:text="@string/catalog_text"
                    android:textColor="@color/white"
                    android:padding="20dp"
                    android:background="@null"
                    />

    </LinearLayout>


</RelativeLayout>