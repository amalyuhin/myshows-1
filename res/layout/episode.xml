<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/episode_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

        >

    <TextView
            android:id="@+id/episode_short_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/DarkLabelsValuesTextAppearance"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            />

     <TextView
            android:id="@+id/episode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/episode_short_title"
            android:layout_alignParentTop="true"
            android:paddingLeft="10dp"
            android:textAppearance="@style/DarkLabelsValuesTextAppearance"
            />

   <TextView
            android:id="@+id/episode_air_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/DarkLabelsValuesTextAppearance"
             android:paddingLeft="10dp"
            android:layout_toRightOf="@id/episode_short_title"
            android:layout_alignParentBottom="true"
            />




     <CheckBox
            android:id="@+id/episode_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/DarkCheck"
            />






</RelativeLayout>