<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView
            android:id="@+id/show_logo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            />

    <ru.myshows.components.RobotoTextView
            android:id="@+id/show_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/show_logo"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:textSize="17sp"
            />

    <RatingBar
            android:id="@+id/show_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"          
            android:numStars="5"
            android:stepSize="0.25"
            android:isIndicator="true"
            style="@style/showsRatingBar"
            android:layout_toRightOf="@id/show_logo"
            android:layout_alignParentBottom="true"
            android:paddingBottom="7dp"
            android:layout_marginLeft="10dp"
            />

    <ru.myshows.components.RobotoTextView
            android:id="@+id/unwatched_episodes"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/very_light_blue"
            android:paddingRight="10dp"
            />



</RelativeLayout>