<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:orientation="horizontal"
                  android:weightSum="11">

        <ru.myshows.components.RobotoTextView
                android:id="@+id/news_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/DarkUserNameTextAppearance"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:layout_weight="2.5"

                />


        <ru.myshows.components.RobotoTextView
                android:id="@+id/news_action"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                style="@style/DarkLabelsValuesTextAppearance"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:layout_weight="4.5"
                />

        <ru.myshows.components.RobotoTextView
                android:id="@+id/news_show"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/DarkShowTextAppearance"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:layout_weight="4"

                />

    </LinearLayout>
    <ImageView
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            />

</RelativeLayout>